<h1>JS GRID Implementation</h1>

<div id="jsGrid"></div>

<script>
    $("#jsGrid").jsGrid({
        width: "100%",
        height: "auto",
        //editing: false,
        editing: true,
        inserting: true,
        deleting: false,
        autoload: true,
        editButton: false,
        deleteButton: false,
        deleting: false,
        filtering: true,
        sorting: true,
        deleteConfirm: "Are you sure to delete the value",
        paging: true,
        controller: {
            loadData: function (filter) {
                debugger;
                return $.ajax({
                    type: "GET",
                    url: "/Customer/GetData",
                    data: filter
                });
            },

            insertItem: function (item) {
                return $.ajax({
                    type: "POST",
                    url: "/Customer/CreateData",
                    data: item,
                    success: function (result) {
                        console.log(result);
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                    }
                });
            },

            updateItem: function (item) {
                return $.ajax({
                    type: "POST",
                    url: "/Customer/UpdateData",
                    data: item
                });
            },
            deleteItem: function (item) {
                return $.ajax({
                    type: "POST",
                    url: "/Customer/DeleteData",
                    data: item
                });
            }
        },
        fields: [
           // { name: "id", type: "number", width: 150 },
            { name: "name", type: "text", width: 150 },
            { name: "age", type: "number", width: 150 },
            { name: "city", type: "text", width: 200 },
            { type: "control" }
        ]

    });

